---
import ArticleCard from "@components/ArticleCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { Frontmatter, sortDateDescending } from "src/misc";

const allPosts = await Astro.glob<Frontmatter>("../pages/blog/articles/*.md");
const posts = sortDateDescending(
	allPosts.filter((post) => post.frontmatter.draft != true)
).slice(0, 3);
---

<BaseLayout title="Home" activeLink="home">
	<section
		class="flex flex-col sm:flex-row justify-center max-w-[90%] w-[52rem] mx-auto gap-12 mb-48"
	>
		<img
			width="850"
			height="850"
			src="images/rickshaw1.jpg"
			alt="avatar"
			class="rounded-lg h-fit self-center justify-self-center"
		/>
		<div class="flex flex-col flex-wrap flex-grow">
			<h1
				class="text-center bg-gradient-to-r from-orange-500 to-red-700 bg-clip-text text-transparent text-5xl mb-[0.7em]"
				class="font-Helvetica Neue"
			>
				<div
					class="font-bold"
					class="font-Helvetica Neue"
					class="text-center text-3xl pt-40" 
				>
					Hire your Indian Rickshaw
				</div>
			</h1>
			<div class= "text-center font-Helvetica Neue text-lg pt-20"
 
				<p> Discover the charm of authentic Indian Rickshaw hire in
				Leicester, offering eco-friendly tuk tuks, stunning floral
				decorations, and unforgettable experiences for weddings, parties
				and cultural events. </p>
			
		</div>
		<div class="flex flex-wrap justify-center gap-5 mt-4">
			<a
				class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
				href="https://www.youtube.com/@vikeshpatel6560/videos"
				target="_blank"
				rel="noreferrer noopener"
			>
				<span class="sr-only">Link to my YouTube channel</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 576 512"
					fill="#c4302b"
				>
					<path
						d="M549.655 124.083c-6.281-23.65-24.787-42.276-48.284-48.597C458.781 64 288 64 288 64S117.22 64 74.629 75.486c-23.497 6.322-42.003 24.947-48.284 48.597-11.412 42.867-11.412 132.305-11.412 132.305s0 89.438 11.412 132.305c6.281 23.65 24.787 41.5 48.284 47.821C117.22 448 288 448 288 448s170.78 0 213.371-11.486c23.497-6.321 42.003-24.171 48.284-47.821 11.412-42.867 11.412-132.305 11.412-132.305s0-89.438-11.412-132.305zm-317.51 213.508V175.185l142.739 81.205-142.739 81.201z"
					></path></svg
				>
			</a>
			
			<a
				class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
				href="https://www.facebook.com/IndianRickshaws?locale=en_GB"
				target="_blank"
				rel="noreferrer noopener"
			>
				<span class="sr-only">Link to my Facebook</span>
				<img src="/images/fb..jpg" />
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 448 512"
					fill="#0e76a8"
				>
					<path
						d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"
					></path></svg
				>
				
			</a>
			<a
				class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
				href="https://www.instagram.com/indianrickshaw/"
				target="_blank"
				rel="noreferrer noopener"
			>
				<span class="sr-only">Link to my YouTube channel</span>
				<img src="/images/Picture 3.jpg" />
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 576 512"
					fill="#c4302b"
				>
					<path
						d="M549.655 124.083c-6.281-23.65-24.787-42.276-48.284-48.597C458.781 64 288 64 288 64S117.22 64 74.629 75.486c-23.497 6.322-42.003 24.947-48.284 48.597-11.412 42.867-11.412 132.305-11.412 132.305s0 89.438 11.412 132.305c6.281 23.65 24.787 41.5 48.284 47.821C117.22 448 288 448 288 448s170.78 0 213.371-11.486c23.497-6.321 42.003-24.171 48.284-47.821 11.412-42.867 11.412-132.305 11.412-132.305s0-89.438-11.412-132.305zm-317.51 213.508V175.185l142.739 81.205-142.739 81.201z"
					></path></svg
				>
			</a>
		</div>
	</section>
</BaseLayout>

<section>
	<h2
		class="mx-auto text-center mb-8 bg-gradient-orange text-transparent bg-clip-text text-4xl border-b-2 border-red-300 font-semibold w-fit"
	>
	</h2>

	<div class="flex flex-wrap flex-col justify-center gap-12">
		{posts.map((post) => <ArticleCard content={post} />)}
	</div>
</section>
